doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title=title
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/sketchy/bootstrap.min.css", integrity="sha384-RxqHG2ilm4r6aFRpGmBbGTjsqwfqHOKy1ArsMhHusnRO47jcGqpIQqlQK/kmGy9R", crossorigin="anonymous")
  link(rel="icon", href="/public/assets/logo_small.png")
body.p-4
    .col-12.col-md-4.m-auto
        h1 Register
        - if (message) 
            h4.text-danger=message
        form(action="/register", method="post")
            .form-group
                label Name
                input#name.form-control(type="text", name="name" autofocus required)
            .form-group
                label Email
                input#email.form-control(type="email", name="email" required)
            .form-group
                label Password
                input#password.form-control(type="password", name="password" required)
            .form-group
                button.btn.btn-primary.form-control(type="submit") Register
        p
            a(href="/") Login
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')