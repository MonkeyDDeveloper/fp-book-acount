doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title=title
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/sketchy/bootstrap.min.css", integrity="sha384-RxqHG2ilm4r6aFRpGmBbGTjsqwfqHOKy1ArsMhHusnRO47jcGqpIQqlQK/kmGy9R", crossorigin="anonymous")
body.p-4
    .col-12.col-md-4.m-auto
        h1 Add a new book
        - if(book.length > 0)
            form(action="/logged/edit-book?_method=PUT", method="post")
                .form-group
                    label Title
                    input.form-control(type="text", value=book[0].title name="title" autofocus required)
                .form-group
                    label Author
                    input.form-control(type="text", value=book[0].author name="author" required)
                .form-group
                    label Description
                    textarea.form-control(name="description" required)=book[0].description
                .form-group
                    label Release date
                    input.form-control(type="date" value=book[0].releaseDate name="releaseDate" required)
                .form-group
                    input(type="hidden", name="id", value=book[0].id)
                    button.btn.btn-primary.form-control(type="submit") Actualizar libro
        - else
            h5 No hay libro disponible a mostrar
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
